@model Product
@{
    ViewBag.Title = "Add Product";
    var categories = ViewBag.Categories as List<Category>;
}
<h2>Add Product</h2>
<form method="post" asp-action="Create">
    @Html.AntiForgeryToken()
    <label>Name:<br /><input type="text" asp-for="Name" required /></label><br />
    <label>Price:<br /><input type="number" asp-for="Price" step="0.01" required /></label><br />
    <label>Image URL:<br /><input type="text" asp-for="ImageUrl" /></label><br />
    <label>Category:<br />
        <select asp-for="Category" required>
            @foreach (var cat in categories)
            {
                <option value="@cat.Name">@cat.Name</option>
            }
        </select>
    </label><br />
    <label>Details (JSON):<br /><textarea asp-for="Details"></textarea></label><br />
    <button type="submit">Add Product</button>
    <span asp-validation-summary="All"></span>
</form>