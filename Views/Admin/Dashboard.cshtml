@model AdminDashboardViewModel
@{
    ViewBag.Title = "Admin Dashboard";
}
<h2>Admin Dashboard</h2>

<h3>Users</h3>
<table>
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Admin</th>
        <th>Created At</th>
    </tr>
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>@user.NameUser</td>
            <td>@user.Email</td>
            <td>@user.IsAdmin</td>
            <td>@user.CreatedAt</td>
        </tr>
    }
</table>

<h3>Products</h3>
<table>
    <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Price</th>
        <th>Seller</th>
    </tr>
    @foreach (var prod in Model.Products)
    {
        <tr>
            <td>@prod.Name</td>
            <td>@prod.Category</td>
            <td>$@prod.Price</td>
            <td>@(prod.Seller != null ? prod.Seller.NameUser : "N/A")</td>
        </tr>
    }
</table>

<h3>Orders</h3>
<table>
    <tr>
        <th>Order #</th>
        <th>User</th>
        <th>Status</th>
        <th>Total</th>
        <th>Date</th>
    </tr>
    @foreach (var order in Model.Orders)
    {
        <tr>
            <td>@order.Id</td>
            <td>@order.User.NameUser</td>
            <td>@order.Status</td>
            <td>$@order.TotalPrice</td>
            <td>@order.CreatedAt</td>
        </tr>
    }
</table>