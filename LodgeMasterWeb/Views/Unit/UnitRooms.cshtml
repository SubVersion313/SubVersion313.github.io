<div id="pageMasterLoad">
    <div class="HomeDashboard">
        <div class="container-fluid">
            <div class="row">
                <form asp-controller="UnitRooms" asp-action="UnitRooms">
                    <div class="col-lg-12 mb-4">
                        <div class="row">
                            <div class="overview-Orders">
                                <h1 class="text-center mb-3">Add Unit</h1>
                                <div class="container-fluid">
                                    <div class="row justify-content-center">
                                        <div class="col-lg-10 col-md-6 col-sm-12 mb-3">
                                            <div class="form-group">
                                                <label>Area Type</label>
                                                <Select class="form-control" id="DDLAreaType">
                                                    <option value="1" selected>Room</option>
                                                    <option value="2">Public Area</option>
                                                </Select>
                                                <span asp-validation-for="AreaTypeId" class="text-danger"></span>
                                            </div>
                                        </div>
                                        
                                        <div class="col-lg-5 col-md-6 col-sm-12 mb-3">
                                            <div class="form-group">
                                                <label>Room No.</label>
                                                <input class="form-control" type="text" id="txtUnitName" asp-for="UnitName" />
                                                <span asp-validation-for="UnitName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-lg-5 col-md-6 col-sm-12 mb-3">
                                            <div class="form-group">
                                                <label>Description</label>
                                                <input class="form-control" type="text" id="txtUnitDescription" asp-for="UnitDescription" />
                                            </div>
                                        </div>
                                        <div class="col-lg-5 col-md-6 col-sm-12 mb-3">
                                            <div class="form-group">
                                                <label for="">Floor</label>
                                                <Select class="form-control" id="DDLFloor">
                                                </Select>
                                                <span asp-validation-for="FloorID" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-lg-5 col-md-6 col-sm-12 mb-3">
                                            <div class="form-group">
                                                <label for="">Room Type</label>
                                                <Select class="form-control" id="DDLUnitTypeId">
                                                </Select>
                                                <span asp-validation-for="UnitTypeId" class="text-danger"></span>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="card-footer d-flex justify-content-center">
                                    <button type="submit" class="btn btn-primary me-2">Save</button>
                                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
