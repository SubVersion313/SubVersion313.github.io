@using Newtonsoft.Json;
@inject IHttpContextAccessor HttpContextAccessor
@{
    Layout = "_Layout_main";
}

@{
    var permissions = new List<KeyValuePair<string, string>>();

    // استرجاع الصلاحيات من الجلسة إذا كانت موجودة
    var permissionsJson = HttpContextAccessor.HttpContext.Session.GetString("UserPermissions");

    if (!string.IsNullOrEmpty(permissionsJson))
    {
        permissions = JsonConvert.DeserializeObject<List<KeyValuePair<string, string>>>(permissionsJson);
    }

    // التحقق من وجود صلاحيات معينة
    bool canRole = permissions.Any(c => c.Key == "Permission" && c.Value == "Permissions.Role.View");
    bool canEdit = permissions.Any(c => c.Key == "Permission" && c.Value == "Permissions.StaffManagement.Edit");
    bool canDelete = permissions.Any(c => c.Key == "Permission" && c.Value == "Permissions.StaffManagement.Delete");
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 pt-3">
            <header class="header-filter">
                <div class="group-filter d-flex">
                    <div class="input-group me-3">
                        <input class="form-control" type="search" placeholder="Search" aria-label="Recipient's username" aria-describedby="button-addon2">
                        <button class="btn btn-outline-master" id="button-addon2" type="button"> <i class="fa-solid fa-magnifying-glass"></i></button>
                    </div>
                    <button class="btn btn-outline-master d-flex align-items-center" type="button" data-bs-toggle="modal" data-bs-target="#exampleModal"> <i class="fa-solid fa-arrow-down-wide-short me-2"></i>Filter</button>
                </div>
                <div class="date">
                    @ViewBag.DisplayCurrntDate
                </div>
                @*                 <a class="btn btn-master d-flex align-items-center rounded-pill btn-Create-Order" asp-controller="CreateOrders" asp-action="Index">
                <i class="fa-solid fa-plus me-2"></i>Create Order
                </a> *@
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle rounded-pill btn-master" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fa-solid fa-plus me-2"></i> Create
                    </button>
                    <ul class="dropdown-menu bg-primary text-white">
                        @if (permissions != null && permissions.Any(c => c.Key == "Permission" && c.Value == "Permissions.CreateOrders.Create"))
                        {
                            <li><a class="dropdown-item text-white" asp-controller="CreateOrders" asp-action="Index"><i class="fa-solid fa-plus me-2"></i> Order</a></li>
                        }
                        @if (permissions != null && permissions.Any(c => c.Key == "Permission" && c.Value == "Permissions.InspectionOrder.Create"))
                        {
                            <li><a class="dropdown-item text-white" asp-controller="InspectionOrder" asp-action="InspectionOrder"><i class="fa-solid fa-plus me-2"></i> Room inspiction</a></li>
                        }
                    </ul>
                </div>
            </header>
        </div>
    </div>
</div>
<div id="pageMasterLoad">
    <div class="HomeDashboard">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 mb-5">
                    <div class="overview-Orders mb-5">

                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 ">
                                <div class="d-flex justify-content-between mb-1">
                                    <div class="form-group">
                                        <select class="form-select rounded-pill" id="ddlInspDepartment" onchange="FilterInspDepartment()" >
                                        </select>
                                    </div>
                                    <div class="mb-2">
                                        <button class="rounded-pill px-4 btn btn-outline-master" data-bs-toggle="modal" data-bs-target="#AddInspDepartment"> <i class="fa-solid fa-plus me-2"></i>Add Inspection Type</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <table class="table table-responsive-scroll data-Tables" id="dataTablesInspDep">
                            <thead>
                                <tr>
                                    <th scope="col"></th>
                                    <th scope="col"></th>
                                    <th scope="col">Type name</th>
                                    <th scope="col">Active</th>
                                    <th scope="col">&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                        <div class="d-flex justify-content-end">
                            <a class="btn btn-secondary btn-apply rounded-pill me-2" type="button" asp-controller="InspectionSetup" asp-action="InspectionSetup"> Back </a>
                            <a class="btn btn-primary btn-apply rounded-pill " type="button" asp-controller="InspectionSetup" asp-action="InspectionQuestion"> Next </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade model-filter-home" id="AddInspDepartment" tabindex="-1" aria-labelledby="AddInspDepartmentLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Add Inspection Type</h1>
                <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="AddInspDepartmentbody">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12 mb-2">
                            <div class="form-group">
                                <label>Inspection Type Name</label>
                                <input class="form-control" type="text" id="txtInspDep_en">
                            </div>
                        </div>

                        <div class="col-lg-12 mb-2">
                            <div class="form-check form-switch d-flex p-0">
                                <input class="mx-2 form-check-input" id="chkActive" type="checkbox" role="switch">
                                <label class="form-check-label" for="flexSwitchCheckDefault">Active</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-start">
                <button class="btn btn-primary btn-apply rounded-pill col-12" type="button" onclick="createInspDep()" >ADD </button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade model-filter-home" id="EditInspDepartment" tabindex="-1" aria-labelledby="EditInspDepartmentLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel_ed">Edit Inspection Type</h1>
                <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="EditInspDepartmentbody">
                <div class="container-fluid">
                    <div class="row">
                        <input type="hidden" id="hdInspDepid" />
                        <div class="col-lg-12 mb-2">
                            <div class="form-group">
                                <label>Inspection Type Name</label>
                                <input class="form-control" type="text" id="txtInspDep_en_ed">
                            </div>
                        </div>
                        <div class="col-lg-12 mb-2">
                            <div class="form-check form-switch d-flex p-0">
                                <input class="mx-2 form-check-input" id="chkActive_ed" type="checkbox" role="switch">
                                <label class="form-check-label" for="flexSwitchCheckDefault">Active</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-start">
                <button class="btn btn-primary btn-apply rounded-pill col-12" type="button" onclick="saveEditInspDep()">Save </button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            var department = '0';

            var ddlInspDepartment = $("#ddlInspDepartment");
            FillInspDepartment(ddlInspDepartment);

            drawtable(department);

        });
        function FilterInspDepartment() {
            var InspInfoId = $("#ddlInspDepartment").val();
            //if (!InspInfoId || InspInfoId == "0" || InspInfoId == undefined) {
            if (!InspInfoId || InspInfoId == undefined) {
                alert('Please select Inspection name');
                return false;
            }
            drawtable(InspInfoId);

        }
        function FillInspDepartment(ddlobject) {

            $.ajax({
                url: '@Url.Action("GetInspectionInfo", "InspectionSetup")',
                type: "GET",
                dataType: "json",
                cache: false,
                success: function (result) {
                    if (result.success) {
                        ddlobject.empty();
                        ddlobject.append($("<option></option>")
                            .attr("value", "0")
                            .text("Select Inspection"));
                        result.returnData.forEach(function (item) {
                            ddlobject.append($("<option></option>")
                                .attr("value", item.value)
                                .text(item.text));
                        });
                    } else {
                        alert(result.message);
                    }
                },
                error: function (err) {
                    return false;
                }
            });
        }
        function drawtable(department) {
            try {
                // Destroy the existing DataTable, if it exists
                if ($.fn.DataTable.isDataTable("#dataTablesInspDep")) {
                    $("#dataTablesInspDep").DataTable().destroy();
                }

                $("#dataTablesInspDep").DataTable({
                    serverSide: true,
                    stateSave: false,
                    processing: true,
                    info: false,
                    searching: false,
                    lengthChange: false,
                    language: {
                        processing: '<i class="fa fa-spinner fa-spin fa-3x fa-fw"></i><span class="sr-only">Loading...</span> '
                    },
                    ajax: {
                        url: '/InspectionSetup/GetInspDepartment',
                        type: 'POST',
                        cache: false,
                        data: { Department: department },
                    },
                    order: [[2, 'asc']],
                    // columnDefs: [
                    //     // {
                    //     // targets: [0, 1],
                    //     // visible: false,
                    //     // searchable: false
                    //     // },
                    //     {
                    //         targets: 9, // This targets the last column
                    //         orderable: false // Disable sorting for the last column
                    //     }
                    // ],
                    columns: [

                        { "data": "inspDepId", "name": "InspDepId", "className": "d-none", "visible": false, "searchable": false },
                        { "data": "inspInfoId", "name": "InspInfoId", "className": "d-none", "visible": false, "searchable": false },

                        { "data": "inspDepName", "name": "InspDepName" },
                        {
                            "name": "bActive ", "render": function (data, type, row) {
                                var rowDiv = '';

                                if (row.bActive == 0) {

                                    rowDiv = `<div class="Availability"> <i class="fa-solid fa-circle-exclamation text-warning me-2"></i></div>`;
                                }
                                else {
                                    rowDiv = `<div class="Availability"><i class="fa-solid fa-circle-check text-success me-2"> </i></div >`;
                                }

                                return rowDiv;
                            }
                        },
                        {
                            "name": "inspDepId", "render": function (data, type, row) {

                                return `<a class="js-itemsrowedit" data-inspDepId="${row.inspDepId}" href="javascript:" onclick="editInspDep(this)"> <i class="fa-regular fa-pen-to-square"></i></a>
                                                <a class="text-danger js-itemsrowdelete" data-inspDepId="${row.inspDepId}" href="javascript:" onclick="deleteInspDep(this)"> <i class="fa-solid fa-trash-can"></i></a>`;

                            }
                        }
                    ],

                });

            }

            catch (err) {
                console.error("An error occurred:", err.message);
                alert(err.message);
            }

        }

        function createInspDep() {
            var objData = {};
            var isActive = 0;


            var txtInspDep_en = $('#txtInspDep_en').val();
            var chkActive = $("#chkActive");
            var inspInfoId = $("#ddlInspDepartment").val();

            if (!inspInfoId || inspInfoId == "0" || inspInfoId == undefined) {
                ShowMsgError('Please select Inspection name');
                return false;
            }
            if (!txtInspDep_en) {// } == null)  || txtitem_en == "" || txtitem_en == undefined) {
                ShowMsgError('Please enter Inspection Type name');
                return false;
            }

            if (chkActive.is(':checked') == true) {
                isActive = 1;
            }

            objData = {
                bActive: isActive,
                InspDepName: txtInspDep_en,
                InspInfoId: inspInfoId
            }

            var jsonData = JSON.stringify(objData);


            $.ajax({
                url: '@Url.Action("CreateInspDepartment", "InspectionSetup")',
                type: 'POST',
                dataType: 'json',
                data: { "dataObj": jsonData },
                success: function (data) {

                    if (data != null) {
                        if (data.success == true) {
                            // alert(data.returnData);

                            $("#AddInspDepartment").modal('hide');
                            clearModalInspDep();
                            drawtable(inspInfoId);
                        }
                        else {
                            alert(data.returnData);
                            $("#AddInspDepartment").modal('show');
                        }

                    }

                },
                error: function (error) {

                    alert(error);
                }
            });


        }
        function saveEditInspDep() {
            var objData = {};
            var isActive = 0;

            var hdInspDepid = $('#hdInspDepid').val();
            var txtInspDep_en_ed = $('#txtInspDep_en_ed').val();
            var chkActive_ed = $("#chkActive_ed");

            var InspInfoId = $("#ddlInspDepartment").val();

            if (!InspInfoId || InspInfoId == "0" || InspInfoId == undefined) {
                alert('Please select Inspection name');
                return false;
            }

            if (!hdInspDepid) {// } == null)  || txtitem_en == "" || txtitem_en == undefined) {
                alert('Please select Inspection Type name');
                return false;
            }

            if (!txtInspDep_en_ed) {// } == null)  || txtitem_en == "" || txtitem_en == undefined) {
                alert('Please enter Inspection Type name');
                return false;
            }

            if (chkActive_ed.is(':checked') == true) {
                isActive = 1;
            }

            objData = {
                //InspInfoId: InspInfoId,
                InspDepId: hdInspDepid,
                bActive: isActive,
                InspDepName: txtInspDep_en_ed
            }
            var jsonData = JSON.stringify(objData);

            $.ajax({
                url: '@Url.Action("SaveEditInspDepartment", "InspectionSetup")',
                type: 'POST',
                dataType: 'json',
                data: { "dataObj": jsonData },
                success: function (data) {

                    if (data != null) {
                        if (data.success == true) {
                            $("#EditInspDepartment").modal('hide');
                            clearModalInspDep();
                            drawtable(InspInfoId);
                        }
                        else {

                            $("#EditInspDepartment").modal('show');
                        }

                    }

                },
                error: function (error) {

                    alert(error);
                }
            });
        }
        function editInspDep(clickedElement) {

            var btnEdit = $(clickedElement);
            var inspDepId = btnEdit.data("inspdepid");

            $.ajax({
                url: '@Url.Action("EditInspDepartment", "InspectionSetup")',
                type: 'POST',
                data: { InspDepId: inspDepId },
                success: function (data) {

                    if (data != null) {

                        if (data.success == true) {

                            clearModalInspDep();

                            $("#hdInspDepid").val(data.returnData.inspDepId);
                            $("#txtInspDep_en_ed").val(data.returnData.inspDepName);

                            if (data.returnData.bActive == 0) {
                                $("#chkActive_ed").attr("checked", false);
                            }
                            else {
                                $("#chkActive_ed").attr("checked", true);
                            }

                            $("#EditInspDepartment").modal("show");
                        }
                        else {
                            //alert(data.returnData);
                            $("#EditInspDepartment").modal('hide');
                        }

                    }

                },
                error: function (error) {

                    alert(error);
                }
            });

        }
        function deleteInspDep(clickedElement) {

            var btnEdit = $(clickedElement);
            var inspDepId = btnEdit.data("inspdepid");

            Swal.fire({
                title: 'Are you sure delete inspection Type ?',
                text: "",
                //icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '@Url.Action("DeleteInspDepartment", "InspectionSetup")',
                        type: 'POST',
                        data: { InspDepId: inspDepId },
                        success: function (data) {
                            if (data != null) {
                                if (data.success == true) {
                                    drawtable();
                                }
                                else {
                                    // alert(data.returnData);

                                }
                            }
                        },
                        error: function (error) {

                            alert(error);
                        }
                    });
                }
            })


        }
        function clearModalInspDep() {

            $('#txtInspDep_en').val();
            $("#chkActive").attr("checked", true);

            $("#chkActive_ed").attr("checked", false);
            $("#txtInspDep_en_ed").val();
            $("#hdInspDepid").val();

        }


    </script>
}