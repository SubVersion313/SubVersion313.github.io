                            }
                        }
                    ],

                });

            }

            catch (err) {
                console.error("An error occurred:", err.message);
                alert(err.message);


            }

        }


        function createRole() {
            var objData = {};
            var isActive = 0;


            var txtRole_en = $('#txtRole_en').val();
            var txtRole_Desc = $("#txtRole_Desc").val();
            var chkActive = $("#chkActive");

            if (!txtRole_en) {// } == null)  || txtitem_en == "" || txtitem_en == undefined) {
                alert('Please enter Role name');
                return false;
            }

            if (chkActive.is(':checked') == true) {
                isActive = 1;
            }

            objData = {

                bActive: isActive,
                RoleName_E: txtRole_en,
                RoleDesc_E: txtRole_Desc
            }

            var jsonData = JSON.stringify(objData);

            $.ajax({
                url: '@Url.Action("CreateRole", "Role")',
                type: 'POST',
                dataType: 'json',
                data: { "dataObj": jsonData },
                success: function (data) {

                    if (data != null) {
                        if (data.success == true) {
                           // alert(data.returnData);
                            $("#AddRole").modal('hide');
                            clearModalRole();
                            drawtable();
                        }
                        else {
                            alert(data.returnData);
                            $("#AddRole").modal('show');
                        }

                    }

                },
                error: function (error) {

                    alert(error);
                }
            });


        }
        function saveEditRole() {
