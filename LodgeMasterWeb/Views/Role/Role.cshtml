        function drawtable() {
            try {
                // Destroy the existing DataTable, if it exists
                if ($.fn.DataTable.isDataTable("#dataTablesRole")) {
                    $("#dataTablesRole").DataTable().destroy();
                }

                $("#dataTablesRole").DataTable({
                    serverSide: true,
                    stateSave: false,
                    processing: true,
                    info: false,
                    searching: false,
                    lengthChange: false,
                    language: {
                        processing: '<i class="fa fa-spinner fa-spin fa-3x fa-fw"></i><span class="sr-only">Loading...</span> '
                    },
                    ajax: {
                        url: '/Role/GetRole',
                        type: 'POST',
                        cache: false,
                        //data: { bActive: isActive },
                    },
                    order: [[1, 'asc']],
                    // columnDefs: [
                    //     // {
                    //     // targets: [0, 1],
                    //     // visible: false,
                    //     // searchable: false
                    //     // },
                    //     {
                    //         targets: 9, // This targets the last column
                    //         orderable: false // Disable sorting for the last column
                    //     }
                    // ],
                    columns: [
                        { "data": "roleID", "name": "RoleID", "className": "d-none", "visible": false, "searchable": false },
                        
                        { "data": "roleName_E", "name": "RoleName_E" },
                        { "data": "roleDesc_E", "name": "RoleDesc_E" },
                        {
                            "name": "bActive ", "render": function (data, type, row) {
                                var rowDiv = '';

                                if (row.bActive == 0) {

                                    rowDiv = `<div class="Availability"> <i class="fa-solid fa-circle-exclamation text-warning me-2"></i></div>`;
                                }
                                else 
                                {
                                    rowDiv = `<div class="Availability"><i class="fa-solid fa-circle-check text-success me-2"> </i></div >`;
                                }

                                return rowDiv;
                            }
                        },
                        {
                            "name": "RoleID", "render": function (data, type, row) {

                                return `<a class="js-itemsrowdetail" data-roleid="${row.roleID}" href="javascript:" onclick="detailRole(this)"> <i class="fa-solid fa-eye"></i></a>
                                                        <a class="js-itemsrowedit" data-roleid="${row.roleID}" href="javascript:" onclick="editRole(this)"> <i class="fa-regular fa-pen-to-square"></i></a>
