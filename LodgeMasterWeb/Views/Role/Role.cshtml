                        }
                    });
                }
            })


        }
        function clearModalRole() {

            $('#txtRole_en').val();
            $("#txtRole_Desc").val();
            $("#chkActive").attr("checked", true);

            $("#chkActive_ed").attr("checked", false);
            $("#txtRole_en_ed").val();
            $("txtRole_Desc_ed").val();
