                RoleName_E: txtRole_en_ed,
                RoleDesc_E: txtRole_Desc_ed
            }
            
            
            var jsonData = JSON.stringify(objData);

            $.ajax({
                url: '@Url.Action("SaveEditRole", "Role")',
                type: 'POST',
                dataType: 'json',
                data: { "dataObj": jsonData },
                success: function (data) {

                    if (data != null) {
                        if (data.success == true) {
                            $("#EditRole").modal('hide')
                            //alert(data.returnData);

                            clearModalRole();
                            drawtable()
                        }
                        else {
                            //alert(data.returnData);
                            $("#EditRole").modal('show')
                        }

                    }

                },
                error: function (error) {

                    alert(error);
                }
            });
        }
        function editRole(clickedElement) {

            var btnEdit = $(clickedElement);
            var depid = btnEdit.data("roleid");

            $.ajax({
                url: '@Url.Action("EditRole", "Role")',
                type: 'POST',
                data: { depid: depid },
                success: function (data) {

                    if (data != null) {

                        if (data.success == true) {
                            
                            clearModalRole();

                            $("#hdRoleid").val(data.returnData.roleID);
                            $("#txtRole_en_ed").val(data.returnData.roleName_E);
                            $("#txtRole_Desc_ed").val(data.returnData.roleDesc_E);

                            if (data.returnData.bActive == 0) {
                                $("#chkActive_ed").attr("checked", false);
                            }
                            else {
                                $("#chkActive_ed").attr("checked", true);
                            }

                            $("#EditRole").modal("show");
                        }
                        else {
                            //alert(data.returnData);
                            $("#EditRole").modal('hide')
                        }

                    }

                },
                error: function (error) {

                    alert(error);
                }
            });

        }
