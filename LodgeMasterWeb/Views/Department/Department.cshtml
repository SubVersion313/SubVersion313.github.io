                        <input type="hidden" id="hdDepid" />
                        <div class="col-lg-12 mb-2">
                            <div class="form-group">
                                <label>English Name</label>
                                <input class="form-control" type="text" id="txtDep_en_ed">
                            </div>
                        </div>
                        <div class="col-lg-12 mb-2">
                            <div class="form-group">
                                <label>Arabic Name</label>
                                <input class="form-control" type="text" id="txtDep_ar_ed">
                            </div>
                        </div>
                        <div class="col-lg-12 mb-2">
                            <div class="form-check form-switch d-flex p-0">
                                <input class="mx-2 form-check-input" id="chkActive_ed" type="checkbox" role="switch">
